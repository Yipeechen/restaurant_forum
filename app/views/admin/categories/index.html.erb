<div class="container">
  <h1 class="text-center">餐廳分類總表</h1>
  <div>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
  </div>
  <br>
  <div class="form-inline" >
    <%= form_for [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
      <% if @category.errors.any? %>
        <%= @category.errors.full_messages.to_sentence %>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>No.</th>
            <th>Category Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td><button type="button" class="btn btn-default btn-sm"><%= link_to '<i class="glyphicon glyphicon-pencil" aria-hidden="true" style="color:gray"></i> 編輯'.html_safe, admin_categories_path(id: category.id) %></button>
            <button type="button" class="btn btn-default btn-sm"><%= link_to '<i class="glyphicon glyphicon-trash" aria-hidden="true" style="color:gray" ></i> 刪除'.html_safe, admin_category_path(category), method: :delete, data: {confirm: "你確定要刪除嗎？"} %></button></td>   
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>