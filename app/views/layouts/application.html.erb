<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantForum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css">
  </head>

  <body>

      <nav class="navbar navbar-inverse">
       <div class="container-fluid">
         <!-- Brand and toggle get grouped for better mobile display -->
         <div class="navbar-header">
           <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
           </button>
           <%= link_to '<i class="glyphicon glyphicon-home" aria-hidden="true"></i> 餐廳評論網 '.html_safe, root_path, class: "navbar-brand" %>
         </div>
 
         <!-- Collect the nav links, forms, and other content for toggling -->
         <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
           <ul class="pull-right text-right nav navbar-nav">
              <% if current_user %>
                <% if current_user.admin? %>
                  <li><%= link_to '<i class="glyphicon glyphicon-inbox" aria-hidden="true"></i> '.html_safe, admin_restaurants_path %></li>
                <% end %>
              <li><p class="navbar-text">Hi, <%= current_user.name %></p></li>
              <li><%= link_to '<i class="glyphicon glyphicon-user" aria-hidden="true"></i> '.html_safe, user_path(current_user) %></li>
              <li><%= link_to('<i class="glyphicon glyphicon-log-out" aria-hidden="true"></i> '.html_safe, destroy_user_session_path, method: :delete) %></li>
              <li><%= link_to('<i class="glyphicon glyphicon-wrench" aria-hidden="true"></i> '.html_safe, edit_user_registration_path) %></li>
              <% else %>
              <li><%= link_to('註冊', new_user_registration_path) %></li>
              <li><%= link_to('<i class="glyphicon glyphicon-log-in" aria-hidden="true"></i> '.html_safe, new_user_session_path) %></li>
             <% end %>
           </ul>
         </div>
       </div>
     </nav>

      <% if flash[:notice] %>
       <div class="container">
         <div class="row">
           <div class="alert alert-success alert-dismissible" role="alert">
             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             <%= notice %>
           </div>
         </div>
       </div>
       <% end %>
   
       <% if flash[:alert] %>
       <div class="container">
         <div class="row">
          <div class="alert alert-danger alert-dismissible" role="alert">
             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             <%= alert %>
          </div>
         </div>
       </div>
       <% end %>

    <%= yield %>

    <!-- Footer -->
    <footer id="footer" class="page-footer">
      <div class="container">
        <div class="footer-content">
          <p style="color: gray">&copy; 2017  Restaurant Forum | All Rights Reserved. </p>
          <div class="footer-social-icon">
            <ul>
                <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                <a href=""><i class="fa fa-github-alt" aria-hidden="true"></i></a>
                <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
