<div class="container">
  <ul class="nav nav-pills nav-pills-center">
    <li role="presentation" class="active"><%= link_to "全部餐廳", root_path %></li>
    <% @categories.each do |category| %>
      <li role="presentation"><%= link_to category.name, category_path(category) %></li>
    <% end %>
  </ul>
  <br>
  <div class="row">
    
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <%= image_tag restaurant.image, class: "img-responsive center-block img-rounded" %>
          <div class="caption">
            <h3 class="title"><%= link_to restaurant.name, restaurant_path(restaurant) %>
              <small class="navbar-right tag"><span class="label label-warning"><%= restaurant.category.name %></span></small></h3>
            <p><%= truncate(restaurant.description, length: 80) %></p>
          </div>
        </div>
      </div>
    <% end %>
      
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
      
  </div>
</div>