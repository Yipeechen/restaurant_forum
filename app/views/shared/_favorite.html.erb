<% if restaurant.is_favorited?(current_user) %>
  <%= link_to '<i class="glyphicon glyphicon-heart" aria-hidden="true"></i>'.html_safe, unfavorite_restaurant_path(restaurant), method: :post, class: "btn btn-link btn-lg", style:'color: crimson' %>
<% else %>
  <%= link_to '<i class="glyphicon glyphicon-heart" aria-hidden="true"></i>'.html_safe, favorite_restaurant_path(restaurant), method: :post, class: "btn btn-link btn-lg", style:'color: gray'  %>
<% end %>