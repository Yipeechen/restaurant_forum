<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>修改檔案</h3>

      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :intro, '自我介紹' %>
        <%= f.text_area :intro, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "檔案更新" , class: "btn btn-primary"  %>
        <%= link_to "取消" , user_path(@user), class: "btn btn-default" %>
      </div>
      <% end %>

    </div>
  </div>
</div>